<%- include('../partials/header.ejs') %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Sales</h1>
    </div>
    <p>This is data of Sales</p>
    <div class="card">
        <div class="card-header with-border">
            <a href="/sales/create" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-solid fa-plus"></i>
                </span>
                <span class="text">Add</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable">
                    <thead>
                        <tr>
                            <th>Invoice</th>
                            <th>Time</th>
                            <th>Total Summary</th>
                            <th>Pay</th>
                            <th>Change</th>
                            <th>Customer</th>
                            <th><i class="fa fa-cog"></i> Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(item=> { %>
                            <tr>
                                <td>
                                    <%= item.invoice %>
                                </td>
                                <td>
                                    <%= moment(item.time).format('YYYY MMMM DD hh:mm:ss') %>
                                </td>
                                <td>Rp <%= item.totalsum %>
                                </td>
                                <td>Rp <%= item.pay %>
                                </td>
                                <td>Rp <%= item.change %>
                                </td>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td>
                                    <a href="/sales/show/<%= item.invoice %>" class="btn btn-circle btn-sm btn-success">
                                        <i class="fas fa-solid fa-info"></i>
                                    </a>
                                    <a class="btn btn-circle btn-sm btn-danger" data-toggle="modal"
                                        data-target="#deleteModal-<%= item.invoice %>">
                                        <i class="fas fa-solid fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                            <!-- Delete Modal-->
                            <div class="modal fade" id="deleteModal-<%= item.invoice %>" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Deleted
                                                Confirmation</h5>
                                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">Ã—</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">Are you sure, you want delete it ? </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" type="button"
                                                data-dismiss="modal">No</button>
                                            <a class="btn btn-primary" href="/sales/delete/<%= item.invoice %>">Yes</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th width="18%">Invoice</th>
                            <th>Time</th>
                            <th>Total Summary</th>
                            <th>Pay</th>
                            <th>Change</th>
                            <th>Customer</th>
                            <th><i class="fa fa-cog"></i> Action</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>