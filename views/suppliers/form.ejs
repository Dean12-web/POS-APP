<%- include('../partials/header.ejs') %>
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Units</h1>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <span style="color:#4e73df">
                                <%= cardheader %>
                            </span>
                        </div>
                        <form method="post">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="name" name="name"
                                            value="<%= data.name %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputAddress" class="col-sm-2 col-form-label">Adress</label>
                                    <div class="col-sm-10">
                                        <textarea name="address" class="form-control" id="address"><%= data.address %></textarea>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputPhone" class="col-sm-2 col-form-label">Phone</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="phone" name="phone" value="<%= data.phone %>">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success btn-sm btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-solid fa-database"></i>
                                    </span>
                                    <span class="text">Save</span>
                                </button>
                                <a href="/suppliers" class="btn btn-warning btn-sm btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-solid fa-backward"></i>
                                    </span>
                                    <span class="text">Back</span>
                                </a>
                            </div>
                        </form>
                    </div>
<%- include('../partials/footer.ejs') %>
