<%- include('../partials/header.ejs') %>
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Units</h1>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <span style="color:#4e73df"><%= cardheader %></span>
                        </div>
                        <form method="post">
                            <div class="card-body">
                                <% if (data && data.unit) { %>
                                    <div class="row mb-3">
                                        <label for="inputNewUnit" class="col-sm-2 col-form-label">Unit</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="newUnit" name="newUnit" value="<%= data.unit %>">
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="row mb-3">
                                        <label for="inputUnit" class="col-sm-2 col-form-label">Unit</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" id="unit" name="unit">
                                        </div>
                                    </div>
                                <% } %>
                                <div class="row mb-3">
                                    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputNote" class="col-sm-2 col-form-label">Note</label>
                                    <div class="col-sm-10">
                                        <!-- <input type="password" class="form-control" id="password" name="password"> -->
                                        <textarea name="note" id="note" class="form-control" cols="30"><%= data.note %></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-success btn-sm btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-solid fa-database"></i>
                                    </span>
                                    <span class="text">Save</span>
                                </button>
                                <a href="/units" class="btn btn-warning btn-sm btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-solid fa-backward"></i>
                                    </span>
                                    <span class="text">Back</span>
                                </a>
                            </div>
                        </form>
                    </div>
<%- include('../partials/footer.ejs') %>