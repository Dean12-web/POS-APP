<%- include('../partials/header.ejs') %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Users</h1>
    </div>
    <p>This is data of users</p>
    <div class="card">
        <div class="card-header with-border">
            <a href="/users/add" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-solid fa-plus"></i>
                </span>
                <span class="text">Add</span>
            </a>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th width="13%">User ID</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Role</th>
                        <th><i class="fa fa-cog"></i> Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.userid %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.role %>
                            </td>
                            <td>
                                <a href="/users/edit/<%= item.userid %>" class="btn btn-circle btn-sm btn-success">
                                    <i class="fas fa-solid fa-info"></i>
                                </a>
                                <a class="btn btn-circle btn-sm btn-danger" data-toggle="modal"
                                    data-target="#deleteModal-<%= item.userid %>">
                                    <i class="fas fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <!-- Delete Modal-->
                        <div class="modal fade" id="deleteModal-<%= item.userid %>" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Deleted
                                            Confirmation</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">Are you sure, you want delete it ? </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">No</button>
                                        <a class="btn btn-primary" href="/users/delete/<%= item.userid %>">Yes</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </tbody>
                <tfoot>
                    <th width="13%">User ID</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th><i class="fa fa-cog"></i> Action</th>
                </tfoot>
            </table>
        </div>
    </div>
<%- include('../partials/footer.ejs') %>