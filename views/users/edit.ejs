<%- include('../partials/header.ejs') %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Users</h1>
    </div>
    <div class="card">
        <div class="card-header">
            <span style="color:#4e73df">Form edit</span>
        </div>
        <form method="post">
            <div class="card-body">
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" value="<%= data.email %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword3" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="name" class="form-control" id="name" name="name" value="<%= data.name %>">
                    </div>
                </div>
                <fieldset class="form-group">
                    <div class="row">
                        <legend class="col-form-label col-sm-2 pt-0">Role</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="operator" value="operator"
                                    <%=data.role=="operator" ? 'checked' : '' %>>
                                <label class="form-check-label" for="operator">
                                    Operator
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="role" id="admin" value="admin"
                                    <%=data.role=="admin" ? 'checked' : '' %>>
                                <label class="form-check-label" for="admin">
                                    Admin
                                </label>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success btn-sm btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-solid fa-database"></i>
                    </span>
                    <span class="text">Save</span>
                </button>
                <a href="/users" class="btn btn-warning btn-sm btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-solid fa-backward"></i>
                    </span>
                    <span class="text">Back</span>
                </a>
            </div>
        </form>
    </div>
<%- include('../partials/footer.ejs') %>