<%- include('../partials/header.ejs') %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Purchases</h1>
    </div>
    <p>This is data of Purchases</p>
    <div class="card">
        <div class="card-header with-border">
            <a href="/purchases/create" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-solid fa-plus"></i>
                </span>
                <span class="text">Add</span>
            </a>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-bordered" id="dataTable">
                <thead>
                    <tr>
                        <th width="18%">Invoice</th>
                        <th>Time</th>
                        <th>Total Summary</th>
                        <th>Supplier</th>
                        <th><i class="fa fa-cog"></i> Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <th>Invoice</th>
                    <th>Time</th>
                    <th>Total Summary</th>
                    <th>Supplier</th>
                    <th><i class="fa fa-cog"></i> Action</th>
                </tfoot>
            </table>
        </div>
    </div>
    <script>
        let iduser = "<%= user.userid %>" 
        $(document).ready(() => {
            $("#dataTable").DataTable({
                "lengthMenu": [[3, 10, -1], [3, 10, "All"]],
                "processing": true,
                "serverSide": true,
                "ajax": "/purchases/datatable",
                "columns": [
                    { "data": "invoice" },
                    {
                        "data": "time",
                        "render": (data) => {
                            return moment(data).format('YYYY MMMM DD hh:mm:ss')
                        }
                    },
                    { "data": "totalsum" },
                    { "data": "name" },
                    {
                        "data": "invoice",
                        "render": (data)=>{
                            return `
                            <a href="/purchases/show/${data}" class="btn btn-circle btn-sm btn-success">
                            <i class="fas fa-solid fa-info"></i>
                        </a>
                        <a class="btn btn-circle btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal${data}">
                            <i class="fas fa-solid fa-trash"></i>
                        </a>
                        <div class="modal fade" id="deleteModal${data}" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Deleted
                                            Confirmation</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">Are you sure, you want delete it ? </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">No</button>
                                        <a class="btn btn-primary" href="/purchases/delete/${data}">Yes</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                            `
                        }
                    }
                ],
                "rowCallback": function (row, data, index) {
                    console.log(iduser)
                    if (data.operator != iduser) {
                        $('td', row).eq(4).css({
                            "pointer-events": 'none',
                            "opacity": '0.5'
                        })
                    }
                }
            })
        })
    </script>
    <%- include('../partials/footer.ejs') %>