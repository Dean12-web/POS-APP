<%- include('../partials/header.ejs') %>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Units</h1>
    </div>
    <div class="card">
        <div class="card-header">
            <span style="color:#4e73df">
                <%= cardheader %>
            </span>
        </div>
        <form method="post" encType="multipart/form-data">
            <div class="card-body">
                <div class="row mb-3">
                    <label for="inputBarcode" class="col-sm-2 col-form-label">Barcode</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="barcode" name="barcode" value="<%= data.barcode %>"
                            <%=data.readonly ? 'readonly' : '' %>>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputStock" class="col-sm-2 col-form-label">Stock</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="stock" name="stock" value="<%= data.stock %>"
                            placeholder="0">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPurchasePrice" class="col-sm-2 col-form-label">Purchase
                        Price</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="purchaseprice" name="purchaseprice"
                            value="<%= data.purchaseprice %>" placeholder="0">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputSellingPrice" class="col-sm-2 col-form-label">Selling Price</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="sellingprice" name="sellingprice"
                            value="<%= data.sellingprice %>" placeholder="0">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputUnit" class="col-sm-2 col-form-label">
                        Unit
                    </label>
                    <div class="col-sm-10">
                        <select name="unit" id="unit" class="form-control">
                            <option value="" selected disabled>Select Unit</option>
                            <% dataUnit.forEach(item=> { %>
                                <option value="<%= item.unit%>" <%=item.unit==data.unit ? 'selected' : '' %>>
                                    <%= item.name %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                </div>
                <div class="row mb-3 ">
                    <label for="picture" class="col-sm-2 col-form-label">Picture</label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <label class="custom-file-label" for="picture">Choose file</label>
                            <input type="file" class="custom-file-input" id="picture" name="picture">
                        </div>
                    </div>
                </div>
                <div class="row mb-3 ">
                    <label for="preview" class="col-sm-2 col-form-label">Preview</label>
                    <div class="col-sm-3">
                        <img id="imagepreview" src="/images/<%= data.picture%>" alt="">
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success btn-sm btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-solid fa-database"></i>
                    </span>
                    <span class="text">Save</span>
                </button>
                <a href="/goods" class="btn btn-warning btn-sm btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-solid fa-backward"></i>
                    </span>
                    <span class="text">Back</span>
                </a>
            </div>
        </form>
    </div>
    <%- include('../partials/footer.ejs') %>